{
  "name": "worker",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:esbuild\" \"pnpm:dev:miniflare\"",
    "dev:esbuild": "esbuild --bundle --sourcemap --format=esm --watch --external:__STATIC_CONTENT_MANIFEST ./src/index.ts --outfile=dist/worker.mjs",
    "dev:miniflare": "miniflare -d --watch --kv URLS --live-reload -e ../../.env.local -V -m -s ../remix-app/public ./dist/worker.mjs",
    "start:test": "pnpm run dev:esbuild && pnpm run dev:miniflare",
    "lint": "eslint .",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@remix-run/cloudflare": "^1.6.5",
    "remix-app": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "cloudflare-env": "workspace:*",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "eslint-config-custom": "workspace:*",
    "miniflare": "^2.6.0",
    "tsconfig": "workspace:*",
    "typescript": "^4.6.4",
    "wrangler": "^2.0.5"
  }
}
