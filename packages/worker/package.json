{
  "name": "worker",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml --env dev --local",
    "mf": "pnpm run mf:build && miniflare -d -w --kv URLS -e .env.local -V -m -s ../remix-app/public ./dist/worker.mjs",
    "mf:build": "esbuild --bundle --format=esm --external:__STATIC_CONTENT_MANIFEST ./src/index.ts --outfile=dist/worker.mjs",
    "dev:test": "pnpm run mf",
    "lint": "eslint .",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@remix-run/cloudflare": "^1.6.5",
    "remix-app": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "cloudflare-env": "workspace:*",
    "eslint": "^8.15.0",
    "eslint-config-custom": "workspace:*",
    "miniflare": "^2.6.0",
    "tsconfig": "workspace:*",
    "typescript": "^4.6.4",
    "wrangler": "^2.0.5"
  }
}
